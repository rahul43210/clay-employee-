<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background" >
    
    
       <include
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        layout="@layout/header_top_screen" />
       
       <LinearLayout 
           android:layout_width="match_parent"
           android:layout_height="0dp"
           android:layout_weight="1"
           android:paddingLeft="20dp"
           android:paddingTop="20dp"
           android:paddingRight="20dp"
           android:orientation="vertical"
           >
           
           <TextView 
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:textColor="@color/black"
               android:text="@string/termcond_textone"
               android:textSize="20sp"
               />
           
           <TextView 
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:textColor="@color/black"
               android:text="@string/termcond_texttwo"
               android:paddingTop="10dp"
               android:textSize="20sp"
               />
           
           <TextView 
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:textColor="@color/black"
               android:text="@string/termcond_textthree"
               android:paddingTop="10dp"
               android:textSize="20sp"
               />
           
           <TextView 
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="@string/termcond_service"
               android:textColor="@color/red"
               android:textSize="22sp"
               />
           
           <TextView 
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:textColor="@color/black"
               android:text="@string/termcond_textfive"
               android:paddingTop="10dp"
               android:textSize="20sp"
               />
           
           <TextView 
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:textColor="@color/black"
               android:text="@string/termcond_textsix"
               android:paddingTop="10dp"
               android:textSize="20sp"
               />
       </LinearLayout>
       
         <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center" >

            <CheckBox
                android:id="@+id/cb_termconditions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="25dp"
                android:layout_marginTop="25dp"
                android:background="@null"
                android:button="@null"
                android:padding="10dp"
                android:drawableLeft="@drawable/checkbox_selector"
                android:drawablePadding="5dp"
                android:text="@string/i_agree_to"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/tv_termconditions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="@string/terms_conditions"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/red" />
        </LinearLayout>
       
       
    <Button
        android:id="@+id/btn_next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@color/red"
        android:gravity="center"
        android:padding="15dp"
        android:text="@string/accept"
        android:textColor="@color/white"
         android:textAppearance="?android:attr/textAppearanceLarge" />
    </LinearLayout>
