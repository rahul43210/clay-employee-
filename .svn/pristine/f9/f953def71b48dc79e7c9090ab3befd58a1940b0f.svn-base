<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp" >
    
    <!-- header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="horizontal" >

        <include
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            layout="@layout/header_top_screen" />

    </LinearLayout>
     <TextView 
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            
            />
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
       
        android:orientation="vertical"
        >
        <TextView 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select any reason for incomplete order :"
            android:textSize="30sp"
            android:layout_marginBottom="35dp"
            android:textColor="@color/red"
            />
        
         <RadioGroup
    android:id="@+id/rg_ReasoSelect"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <RadioButton
        android:id="@+id/rb_IncompleteDocuments"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:button="@null"
        android:drawableLeft="@drawable/radio_selector"
        android:checked="true"
       android:layout_marginBottom="10dp"
        android:drawablePadding="20dp"
       android:text="Incomplete Documents"
        android:textColor="@color/red" 
        android:textAppearance="?android:attr/textAppearanceLarge"/>
	
    <RadioButton
        android:id="@+id/rb_CustomerNotAvailable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/radio_selector"
        android:button="@null"
        android:background="@null"
        android:drawablePadding="20dp"
       
         android:text="Customer Not Available"
        
        android:textColor="@color/red"
        android:textAppearance="?android:attr/textAppearanceLarge" />
    </RadioGroup>
     
        <!-- <RadioGroup
            android:id="@+id/rg_ReasoSelect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingLeft="60dp"
            android:layout_marginBottom="35dp"
                                   >
            
        <RadioButton
            android:id="@+id/rb_IncompleteDocuments"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:checked="false"
            android:layout_marginBottom="35dp"
            android:text="Incomplete Documents" />

        <RadioButton
            android:id="@+id/rb_CustomerNotAvailable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:textSize="25sp"
            android:text="Customer Not Available" />
            
            
        </RadioGroup> -->
        
         <TextView 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Any Other Reason :"
            android:layout_gravity="center_horizontal"
            android:textSize="30sp"
            android:layout_marginBottom="65dp"
            android:textColor="@color/red"
            />
         <EditText 
             android:id="@+id/et_AnyOtherReason"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginLeft="10dp"
             android:layout_marginRight="50dp"
             android:layout_marginBottom="35dp"/>
         
         <TextView 
             android:id="@+id/tv_Submit" 
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:gravity="center"
             android:background="@color/red"
             android:layout_gravity="bottom"
             android:text="Submit"
             android:textSize="30sp"
             android:textColor="@color/white"
             android:layout_marginLeft="10dp"
             android:layout_marginRight="10dp"
             android:padding="20dp"
             
             />
        
   </LinearLayout> 

    
</LinearLayout>
